<div class="container" data-controller="live-update" data-live-update-url-value="<%= pipeline_pipeline_run_path(@pipeline, @pipeline_run, format: :json) %>" data-live-update-enabled-value="true">
  <%= link_to pipeline_pipeline_runs_path(@pipeline), class: 'back-link' do %>
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M19 12H5"></path>
      <path d="M12 19l-7-7 7-7"></path>
    </svg>
    Back to Pipeline Runs
  <% end %>
  
  <div class="page-header">
    <div class="header-left">
      <h1>Pipeline Run #<%= @pipeline_run.id %></h1>
      <p class="subtitle">
        <%= @pipeline.time_series.ticker %> <span class="latest-timestamp"><%= @pipeline.latest_timestamp %></span>
        <% if @pipeline_run == @pipeline.latest_run %>
          <span class="latest-badge">Latest Run</span>
        <% end %>
      </p>
      <div class="status-badges">
        <span class="status-badge status-<%= @pipeline_run.status.downcase %>">
          <%= @pipeline_run.status.capitalize %>
        </span>
        <span class="stage-badge stage-<%= @pipeline_run.stage.downcase %>">
          <%= @pipeline_run.stage.capitalize %>
        </span>
      </div>
    </div>
    <div class="header-actions">
      <div class="live-update-toggle">
        <label class="toggle-label">
          <input type="checkbox" data-live-update-target="toggle" data-action="change->live-update#toggle">
          <span class="toggle-slider"></span>
          Live Updates
        </label>
      </div>
      <%= link_to "View Pipeline", pipeline_path(@pipeline), class: "btn btn-secondary" %>
      <% if @pipeline_run.can_run? %>
        <%= link_to "Rerun", rerun_pipeline_pipeline_run_path(@pipeline, @pipeline_run), method: :patch, class: "btn btn-primary", 
            confirm: "Are you sure you want to rerun this pipeline?", 
            data: { turbo_method: :patch } %>
      <% end %>
      <% if @pipeline_run.WORKING? %>
        <%= link_to "Schedule Stop", schedule_stop_pipeline_pipeline_run_path(@pipeline, @pipeline_run), method: :patch, class: "btn btn-warning", 
            confirm: "Are you sure you want to schedule this pipeline run to stop?", 
            data: { turbo_method: :patch } %>
      <% end %>
    </div>
  </div>

  <div class="run-details">
    <div class="detail-section">
      <h2>Run Statistics</h2>
      <div class="stats-grid">
        <div class="stat-card success">
          <div class="stat-icon">✓</div>
          <div class="stat-content">
            <div class="stat-value" data-stat="successful"><%= number_with_delimiter(@pipeline_run.n_successful) %></div>
            <div class="stat-label">Successful Operations</div>
          </div>
        </div>
        <div class="stat-card failed">
          <div class="stat-icon">✗</div>
          <div class="stat-content">
            <div class="stat-value" data-stat="failed"><%= number_with_delimiter(@pipeline_run.n_failed) %></div>
            <div class="stat-label">Failed Operations</div>
          </div>
        </div>
        <div class="stat-card skipped">
          <div class="stat-icon">⊘</div>
          <div class="stat-content">
            <div class="stat-value" data-stat="skipped"><%= number_with_delimiter(@pipeline_run.n_skipped) %></div>
            <div class="stat-label">Skipped Operations</div>
          </div>
        </div>
        <div class="stat-card total">
          <div class="stat-icon">Σ</div>
          <div class="stat-content">
            <div class="stat-value" data-stat="total"><%= number_with_delimiter(@pipeline_run.total_processed) %></div>
            <div class="stat-label">Total Operations</div>
          </div>
        </div>
      </div>
      
      <% if @pipeline_run.total_processed > 0 %>
        <div class="success-rate">
          <div class="rate-label">Success Rate</div>
          <div class="rate-bar">
            <div class="rate-fill" style="width: <%= @pipeline_run.success_rate %>%"></div>
          </div>
          <div class="rate-value"><%= @pipeline_run.success_rate %>%</div>
        </div>
      <% end %>
    </div>

    <div class="detail-section">
      <h2>Run Information</h2>
      <div class="detail-grid">
        <div class="detail-item">
          <span class="detail-label">Run ID</span>
          <span class="detail-value">#<%= @pipeline_run.id %></span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Pipeline</span>
          <span class="detail-value">
            <%= link_to @pipeline.display_name, pipeline_path(@pipeline), class: "pipeline-link" %>
          </span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Started At</span>
          <span class="detail-value"><%= @pipeline_run.created_at.strftime('%B %d, %Y at %I:%M:%S %p') %></span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Last Updated</span>
          <span class="detail-value"><%= @pipeline_run.updated_at.strftime('%B %d, %Y at %I:%M:%S %p') %></span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Duration</span>
          <span class="detail-value">
            <%= distance_of_time_in_words(@pipeline_run.created_at, @pipeline_run.updated_at) %>
          </span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Current Status</span>
          <span class="detail-value">
            <span class="status-badge status-<%= @pipeline_run.status.downcase %>">
              <%= @pipeline_run.status.capitalize %>
            </span>
          </span>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h2>Pipeline Progress</h2>
      <div class="progress-indicator">
        <div class="progress-bar">
          <% stages = ['START', 'FETCH', 'TRANSFORM', 'IMPORT', 'POST_PROCESSING', 'FINISH'] %>
          <% current_stage_index = stages.index(@pipeline_run.stage) || 0 %>
          <% stages.each_with_index do |stage, index| %>
            <div class="progress-step <%= 'active' if current_stage_index && index <= current_stage_index %> <%= 'current' if stage == @pipeline_run.stage %>">
              <div class="step-marker"></div>
              <div class="step-label"><%= stage.humanize %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @pipeline_run.logs.any? %>
      <div class="detail-section">
        <h2>Run Logs</h2>
        <div class="logs-container">
          <% @pipeline_run.logs.order(:created_at).each do |log| %>
            <div class="log-entry <%= log.level %>">
              <div class="log-timestamp">
                <%= log.created_at.strftime('%H:%M:%S.%L') %>
              </div>
              <div class="log-level">
                <%= log.level.upcase %>
              </div>
              <div class="log-message">
                <%= log.message %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="detail-section">
        <h2>Run Logs</h2>
        <div class="empty-logs">
          <p>No logs available for this run yet.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

