<div class="container">
  <div class="page-header">
    <h1>Create New Pipeline</h1>
    <%= link_to "â† Back to Pipelines", pipelines_path, class: "btn btn-secondary" %>
  </div>

  <div class="form-container">
    <%= form_with model: @pipeline, local: true, class: "pipeline-form" do |form| %>
      <% if @pipeline.errors.any? %>
        <div class="error-messages">
          <h3><%= pluralize(@pipeline.errors.count, "error") %> prohibited this pipeline from being saved:</h3>
          <ul>
            <% @pipeline.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-section">
        <h2>Pipeline Configuration</h2>
        
        <div class="form-group">
          <%= form.label :time_series_id, "Time Series", class: "form-label" %>
          <%= form.select :time_series_id, options_for_select(@time_series_options), 
                         { prompt: "Select a time series..." }, 
                         { class: "form-select" } %>
          <div class="form-help">Choose the time series this pipeline will process.</div>
        </div>

        <div class="form-group">
          <%= form.label :chain, "Pipeline Chain", class: "form-label" %>
          <%= form.select :chain, options_for_select(@chain_options), 
                         { prompt: "Select a pipeline chain..." }, 
                         { class: "form-select" } %>
          <div class="form-help">Choose the pipeline chain implementation to use.</div>
        </div>
      </div>

      <div class="form-actions">
        <%= form.submit "Create Pipeline", class: "btn btn-primary" %>
        <%= link_to "Cancel", pipelines_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .page-header h1 {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
  }

  .btn {
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    display: inline-block;
    border: none;
    cursor: pointer;
    font-size: 0.875rem;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-secondary {
    background-color: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #4b5563;
  }

  .form-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .pipeline-form {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 2rem;
  }

  .error-messages {
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 0.375rem;
    padding: 1rem;
    margin-bottom: 2rem;
  }

  .error-messages h3 {
    margin: 0 0 0.5rem 0;
    color: #dc2626;
