<div class="container" data-controller="live-update" data-live-update-url-value="<%= pipeline_path(@pipeline, format: :json) %>" data-live-update-enabled-value="true">
  <div class="top-navigation">
    <%= link_to pipelines_path, class: 'back-link' do %>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5"></path>
        <path d="M12 19l-7-7 7-7"></path>
      </svg>
      Back to Pipelines
    <% end %>
    
    <div class="live-update-toggle">
      <label class="toggle-label">
        <input type="checkbox" data-live-update-target="toggle" data-action="change->live-update#toggle">
        <span class="toggle-slider"></span>
        Live Updates
      </label>
    </div>
  </div>
  
  <div class="page-header">
    <div class="header-left">
      <h1><%= @pipeline.time_series.ticker %> <span class="latest-timestamp"><%= @pipeline.latest_timestamp %></span></h1>
      <div class="status-badges">
        <span class="status-badge status-<%= @pipeline.status %>">
          <%= @pipeline.status.capitalize %>
        </span>
        <span class="stage-badge stage-<%= @pipeline.stage %>">
          <%= @pipeline.stage.capitalize %>
        </span>
      </div>
    </div>
    <div class="header-actions">
      <%= link_to "Remove", pipeline_path(@pipeline), method: :delete, class: "btn btn-danger", 
          confirm: "Are you sure you want to delete this pipeline? This action cannot be undone. All pipeline runs and logs will be permanently lost.", 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this pipeline? This action cannot be undone. All pipeline runs and logs will be permanently lost." } %>
      <%= link_to "View All Runs", pipeline_pipeline_runs_path(@pipeline), class: "btn btn-secondary" %>
      <%= link_to "Run Pipeline", run_pipeline_path(@pipeline), class: "btn btn-success", 
          data: { turbo_method: :patch } %>
    </div>
  </div>

  <div class="pipeline-details">
    <div class="detail-section">
      <h2>Time Series Information</h2>
      <div class="detail-grid">
        <div class="detail-item">
          <span class="detail-label">Ticker</span>
          <span class="detail-value">
            <%= link_to @pipeline.time_series.ticker, time_series_path(@pipeline.time_series.ticker), class: "ticker-link" %>
          </span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Source</span>
          <span class="detail-value"><%= @pipeline.time_series.source %></span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Timeframe</span>
          <span class="detail-value"><%= @pipeline.time_series.timeframe %></span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Kind</span>
          <span class="detail-value"><%= @pipeline.time_series.kind %></span>
        </div>
        <% if @pipeline.time_series.source_id.present? %>
          <div class="detail-item">
            <span class="detail-label">Source ID</span>
            <span class="detail-value"><%= @pipeline.time_series.source_id %></span>
          </div>
        <% end %>
        <% if @pipeline.time_series.description.present? %>
          <div class="detail-item full-width">
            <span class="detail-label">Description</span>
            <span class="detail-value"><%= @pipeline.time_series.description %></span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="detail-section">
      <h2>Pipeline Chain Information</h2>
      <div class="detail-grid">
        <div class="detail-item">
          <span class="detail-label">Chain Type</span>
          <span class="detail-value"><%= @pipeline.chain %></span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Total Runs</span>
          <span class="detail-value" data-stat="total-runs"><%= @pipeline.runs.count %></span>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h2>Latest Run Statistics</h2>
      <% if @pipeline.latest_run %>
        <div class="stats-grid">
          <div class="stat-card success">
            <div class="stat-icon">✓</div>
            <div class="stat-content">
              <div class="stat-value" data-stat="successful"><%= number_with_delimiter(@pipeline.n_successful) %></div>
              <div class="stat-label">Successful Operations</div>
            </div>
          </div>
          <div class="stat-card failed">
            <div class="stat-icon">✗</div>
            <div class="stat-content">
              <div class="stat-value" data-stat="failed"><%= number_with_delimiter(@pipeline.n_failed) %></div>
              <div class="stat-label">Failed Operations</div>
            </div>
          </div>
          <div class="stat-card skipped">
            <div class="stat-icon">⊘</div>
            <div class="stat-content">
              <div class="stat-value" data-stat="skipped"><%= number_with_delimiter(@pipeline.n_skipped) %></div>
              <div class="stat-label">Skipped Operations</div>
            </div>
          </div>
          <div class="stat-card total">
            <div class="stat-icon">Σ</div>
            <div class="stat-content">
              <div class="stat-value" data-stat="total"><%= number_with_delimiter(@pipeline.n_successful + @pipeline.n_failed + @pipeline.n_skipped) %></div>
              <div class="stat-label">Total Operations</div>
            </div>
          </div>
        </div>
      <% else %>
        <p>No runs have been executed yet.</p>
      <% end %>
    </div>

    <div class="detail-section">
      <h2>Pipeline Timeline</h2>
      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <div class="timeline-title">Pipeline Created</div>
            <div class="timeline-time"><%= @pipeline.created_at.strftime('%B %d, %Y at %I:%M %p') %></div>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <div class="timeline-title">Last Updated</div>
            <div class="timeline-time"><%= @pipeline.updated_at.strftime('%B %d, %Y at %I:%M %p') %></div>
          </div>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h2>Current Status</h2>
      <div class="status-overview">
        <div class="status-item">
          <span class="status-label">Current Status:</span>
          <span class="status-badge status-<%= @pipeline.status %>">
            <%= @pipeline.status.capitalize %>
          </span>
        </div>
        <div class="status-item">
          <span class="status-label">Current Stage:</span>
          <span class="stage-badge stage-<%= @pipeline.stage %>">
            <%= @pipeline.stage.capitalize %>
          </span>
        </div>
      </div>
      
      <div class="progress-indicator">
        <div class="progress-bar">
          <% stages = ['START', 'FETCH', 'TRANSFORM', 'IMPORT', 'POST_PROCESSING', 'FINISH'] %>
          <% current_stage_index = stages.index(@pipeline.stage) || 0 %>
          <% stages.each_with_index do |stage, index| %>
            <div class="progress-step <%= 'active' if current_stage_index && index <= current_stage_index %> <%= 'current' if stage == @pipeline.stage %>">
              <div class="step-marker"></div>
              <div class="step-label"><%= stage.capitalize %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @pipeline.latest_run&.logs&.any? %>
      <div class="detail-section">
        <h2>Latest Run Logs</h2>
        <div class="logs-container">
          <% @pipeline.latest_run.logs.order(:created_at).each do |log| %>
            <div class="log-entry <%= log.level %>">
              <div class="log-timestamp">
                <%= log.created_at.strftime('%H:%M:%S.%L') %>
              </div>
              <div class="log-level">
                <%= log.level.upcase %>
              </div>
              <div class="log-message">
                <%= log.message %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

